<div class="col-md-6 col-md-offset-6">
  <div class="panel panel-default">
    <div class="panel-heading">
    
<h2>Sign up</h2>
<%= nested_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<ul class="role">
<%= f.label :Users %><br/>
<div class="form-group">
<%= f.radio_button :role, "admin" %> Admin&nbsp;
<%= f.radio_button :role, "user" %> User&nbsp;
</div>
</ul>
<div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </div>
<div class="field">
 <%= f.label :Firstname %><br/>
    <div class="form-group">
        <%= f.text_field :first_name, placeholder: "Firstname", class: "form-control input-lg", label: false, :required =>true %>
    </div>
 
   <div class="field">
 <%= f.label :Surname %><br/>
    <div class="form-group">
        <%= f.text_field :last_name, placeholder: "Surname", class: "form-control input-lg", label: false, :required =>true %>
    </div>
   <div class="field">
 <%= f.label :Name %><br/>
    <div class="form-group">
        <%= f.text_field :name, placeholder: "Name", class: "form-control input-lg", label: false, :required =>true %>
    </div>
<div class="field">
 <%= f.label :Email %><br/>
    <div class="form-group">
        <%= f.email_field :email, placeholder: "Email", class: "form-control input-lg", label: false, :required =>true %>
    </div>
 
<div class="field">
 <%= f.label :password %><br/>
    <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
        <%= f.password_field :password, placeholder: "Password", class: "form-control input-lg", label: false ,:required =>true, autocomplete: "off" %>
    </div>
 
<div class="field">
 <%= f.label :Password_confirmation  %><br/>
    <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "Password_confirmation", class: "form-control input-lg", label: false, :required =>true, autocomplete: "off" %>
    </div>
 
   <div class="field">
 <%= f.label :Birthday %><br/>
    <div class="form-group">
        <%= f.date_field :date_of_birth, placeholder: "Birthday", class: "form-control input-lg", label: false, :required =>true %>
    </div>
  <ul class="gender_type_list">
  <%= f.label :Gender %><br/>
  <div class="form-group">
<%= f.radio_button :gender_type_list, "female" %> Female&nbsp;
<%= f.radio_button :gender_type_list, "male" %> male&nbsp;<br>

</ul>
</div>
    <div class="field">
 <%= f.label :Phone_No %><br/>
    <div class="form-group">
        <%= f.text_field :phone, placeholder: "Phone_No", class: "form-control input-lg", label: false, :required =>true %>
    </div>

  
    <div class="field">
 <%= f.label :Address %><br/>
    <div class="form-group">
        <%= f.cktext_area :address, :class => 'ckeditor', rows: 10 %>
    </div>

  <div class="actions">
    <%= f.submit "Create an account",class: "btn btn-success"%>
  </div>

<% end %></div></div></ul></div></div></div></div></div></div></div></div></div></div>


