<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :Name %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
  <%= f.label :Email %><br>
  <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :Comment %><br>
  <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
    
  </p>
<% end %>