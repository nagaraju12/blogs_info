<% if @article.errors.any? %>
  <ul>
    <%= @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @article do |f| %>
  <div>
    <%= f.label :name %>
  </div>
  <div>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :body %>
  </div>
  <div>
   <%= f.cktext_area :body, :class => 'ckeditor', rows: 10%>
   
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>