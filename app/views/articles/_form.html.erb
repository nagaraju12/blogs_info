<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
<%= form_for @article do |f| %>
  <div>
    <%= f.label :Title %>
  </div>
 <div class="form-group">
        <%= f.text_field :name, placeholder: "Title", class: "form-control input-lg", label: false, :required =>true %>
    </div>
  <div>
   <%= f.label :email %>
   </div>
 <div class="form-group">
        <%= f.email_field :email, placeholder: "example@gmail.com", class: "form-control input-lg", label: false,  :required =>true %>
    </div>
  <div>
    <%= f.label :body %>
  </div>
  <div>
   <%= f.cktext_area :body, :class => 'ckeditor', rows: 10%>
   
  </div>
  
  <div>
    <%= f.submit %>
  </div>
<% end %></div></div></div>